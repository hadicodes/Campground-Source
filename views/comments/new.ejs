<% include ../partials/header  %>

<h1>New Comments Page</h1>
<br>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new comment to <%= campground.name %></h1>
        <div class="form-style">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Author">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer  %>