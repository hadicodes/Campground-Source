<% include ../partials/header %>
<div class="container">
    <h1>
        <%= campground.name %>
    </h1>

    <img src="<%= campground.image %>">
</div>
    <div class="container">
        <h4>Description</h4>
        <p>
            <%= campground.description %>
        </p>
        <br>
        <h4>Comments</h4>
        <% campground.comments.forEach(function (comment){ %>
            <p> <strong><%= comment.author %></strong> - <%= comment.text %> </p>
            <% })  %>
            <a name="" id="" class="btn btn-info" href="/campgrounds/<%= campground.id %>/comments/new" role="button">Add A Comment</a>
    </div>


            <% include ../partials/footer %>